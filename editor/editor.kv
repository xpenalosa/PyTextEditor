#:kivy 1.11.1

<EditorWidget>:
    id: editor_widget
    BoxLayout:
        width: root.width
        height: root.height
        orientation: 'vertical'
        StackLayout:
            size_hint_y: .05
            Button:
                size_hint_x: 0.1
                text: 'Save'
                on_release: editor_widget.save()
            Button:
                size_hint_x: 0.1
                text: 'Run'
                on_release: editor_widget.run_code()
            Button:
                size_hint_x: 0.1
                text: 'Quit'
                on_release: editor_widget.quit()
        BoxLayout:
            size_hint_y: .95
            FileChooserListView:
                id: os_view
                size_hint_x: 0.3
                on_submit: editor_widget.open(os_view)
            TabbedPanel:
                id: tabbed_panel
                size_hint_x: 0.7
                do_default_tab: False
