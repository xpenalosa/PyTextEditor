#:kivy 1.11.1
#:include editor/components/toolbar/toolbar.kv

<EditorWidget>:
    id: editor_widget
    width: root.width
    height: root.height
    BoxLayout:
        width: root.width
        height: root.height
        orientation: 'vertical'
        Toolbar:
            size_hint_y: 0.05
            controller: editor_widget
        BoxLayout:
            size_hint_y: .95
            FileChooserListView:
                id: os_view
                size_hint_x: 0.3
                on_submit: root.open(os_view)
            TabbedPanel:
                id: tabbed_panel
                size_hint_x: 0.7
                do_default_tab: False
